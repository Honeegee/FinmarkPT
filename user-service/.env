# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=finmark_ecommerce
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-different-from-access-token
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-for-additional-security

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
REGISTER_RATE_LIMIT_MAX=3

# 2FA Configuration
TWO_FACTOR_ISSUER=Finmark Corporation
TWO_FACTOR_SERVICE_NAME=Finmark E-commerce Platform

# Email Configuration (for password reset - configure based on your email service)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@finmarksolutions.ph

# Security Monitoring
ENABLE_SECURITY_LOGGING=true
SUSPICIOUS_ACTIVITY_THRESHOLD=20
ACCOUNT_LOCKOUT_ATTEMPTS=10
ACCOUNT_LOCKOUT_DURATION=3600

# Development Settings
LOG_LEVEL=debug
ENABLE_CORS=true
TRUST_PROXY=true
